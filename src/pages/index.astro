---
import BaseLayout from '../layouts/BaseLayout.astro';

const title = 'Bytecraft';
const description = 'A small indie gamedev studio.';
const permalink = Astro.site.href;
---

<BaseLayout title={title} description={description} permalink={permalink}>
    <!-- /// HERO SECTION /// -->
    <div id="hero-section" class="small-margin">
        <div id="particles-web"></div>
        <div class="row hero-unit">
            <div class="container">
                <div class="hero-caption"><!-- Main Tagline -->
                    <h1>Byte<span class="colored">Craft</span></h1>
                </div>
            </div>
        </div>
    </div><!-- Hero Section End -->
</BaseLayout>
